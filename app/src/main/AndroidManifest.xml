<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.TaskMonitoringApp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TaskMonitoringApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidChatApp">
        <activity android:name="com.example.TaskMonitoringApp.user_login_activity"></activity>
        <activity android:name="com.example.TaskMonitoringApp.Signup_activity" />
        <activity
            android:name="com.example.TaskMonitoringApp.Signup_login_page"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.TaskMonitoringApp.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.TaskMonitoringApp.MainActivity" />
    </application>

</manifest>